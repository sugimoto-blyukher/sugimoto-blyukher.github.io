---
import '../styles/global.css'
const {url, title, image, description} = Astro.props;
---

<article class="bg-gray-800/60 border border-white/10 rounded-xl overflow-hidden shadow hover:shadow-lg transition">
  <a class="block" href={url}>
    <div class="flex gap-4 p-4 items-start">
      {image?.url && (
        <img class="w-28 h-28 object-cover rounded-md flex-none" src={image.url} alt={image?.alt || title} />
      )}
      <div class="min-w-0 flex-1">
        <h2 class="text-xl md:text-2xl font-bold leading-snug tracking-tight text-white clamp-2 break-words hyphens-auto hover:text-pink-300">
          {title}
        </h2>
        {description && (
          <p class="text-sm text-gray-300 leading-relaxed">{description}</p>
        )}
      </div>
    </div>
  </a>
</article>
