---
const {
  title = 'sugimoto',
  description = 'sugimoto のサイト',
  image = '/icon6.png',
  url,
  siteName = 'sugimoto',
  twitterSite = '@sug1m0t0_unk',
} = Astro.props as {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  siteName?: string;
  twitterSite?: string;
};

const pageUrl = url || (Astro.site ? new URL(Astro.url.pathname + Astro.url.search, Astro.site).href : Astro.url.href);
const imageUrl = (() => {
  try { return new URL(image, Astro.site || Astro.url).href; } catch { return image; }
})();
---

<!-- Open Graph / Twitter SEO -->
<meta property="og:type" content="website" />
<meta property="og:url" content={pageUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={siteName} />
<meta property="og:image" content={imageUrl} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={twitterSite} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageUrl} />

