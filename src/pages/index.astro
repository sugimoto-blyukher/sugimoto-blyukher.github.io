---
import BaseLayout from "../layouts/Default.astro";
//window.alert("Loaded");
// NAV toggle


---
<BaseLayout>
    <section class="py-16">
        <div class="flex flex-col-reverse md:flex-row items-center gap-10">
            <!-- Text content -->
            <div class="w-full md:w-1/2 mt-4 md:mt-0 megane-text">
                <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
                    sugimoto
                </h1>
                <p class="text-lg text-gray-300 mb-6 leading-relaxed">
                    いろいろあるよ(そうなる予定)
                </p>
                <a href="/about"
                   class="inline-block bg-pink-500 text-gray-900 px-6 py-3 rounded-lg hover:bg-pink-400 transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-pink-500">
                    詳しく見る
                </a>
            </div>
            <!-- Profile image -->
            <div class="w-full md:w-1/2 flex justify-center megane-image">
                <div class="w-56 h-56 rounded-full overflow-hidden shadow-2xl transform hover:scale-105 transition">
                    <img src="public/image.jpg" alt="Profile" class="w-full h-full object-cover"/>
                </div>
            </div>
        </div>
    </section>

    <!-- Content Section -->
    <section class="py-10 grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-gray-800/60 border border-white/10 p-6 rounded-xl shadow-lg hover:shadow-xl transition grid-item">
            <h2 class="text-2xl font-semibold mb-3"><a class="hover:text-pink-400" href="#">作ったもの</a></h2>
            <p class="text-gray-300 leading-relaxed">何か出来たら追加予定</p>
        </div>
        <div class="bg-gray-800/60 border border-white/10 p-6 rounded-xl shadow-lg hover:shadow-xl transition grid-item">
            <h2 class="text-2xl font-semibold mb-3"><a class="hover:text-pink-400" href="https://note.com/hassenius_2005">Note</a>
            </h2>
            <p class="text-gray-300 leading-relaxed">なんか吐きます</p>
        </div>
        <div class="bg-gray-800/60 border border-white/10 p-6 rounded-xl shadow-lg hover:shadow-xl transition grid-item">
            <h2 class="text-2xl font-semibold mb-3"><a class="hover:text-pink-400" href="https://x.com/sug1m0t0_unk">X</a></h2>
            <p class="text-gray-300 leading-relaxed">我がX</p>
        </div>
    </section>
</BaseLayout>
